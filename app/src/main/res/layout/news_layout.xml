<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/news_ref"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/news_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fbmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:fab_labelStyle="@style/Theme.menu">
        <!--fab:fab_labelStyle="@android:style/Theme.Material.Settings">-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/MainColor"
            fab:theme="@android:style/Theme.Material.Settings"
            fab:fab_title="头条"
            fab:fab_icon="@drawable/bbc_logo"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/yl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/MainColor"
            fab:theme="@android:style/Theme.Material.Settings"
            fab:fab_title="娱乐"
            fab:fab_icon="@drawable/star_wars"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/ty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/MainColor"
            fab:theme="@android:style/Theme.Material.Settings"
            fab:fab_title="体育"
            fab:fab_icon="@drawable/olympic_rings"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/cj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/MainColor"
            fab:theme="@android:style/Theme.Material.Settings"
            fab:fab_title="财经"
            fab:fab_icon="@drawable/money_bag"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/MainColor"
            fab:theme="@android:style/Theme.Material.Settings"
            fab:fab_title="国际"
            fab:fab_icon="@drawable/nintendo"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
